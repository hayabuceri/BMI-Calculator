<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMICalculator.Information"
             Title="Information">
    <StackLayout HorizontalOptions="Fill" VerticalOptions="Start" Padding="10,10,10,10">
        <Grid Padding="20,0,30,0" ColumnDefinitions=" 15* , 15*" >

            <StackLayout Grid.Row="0" Grid.Column="0">
                <ImageButton Grid.Row="0" Grid.Column="0" Source="lotusposition" Clicked="OnYogaClicked"/>
                <Label Grid.Row="0" Grid.Column="0" Text="Yoga Videos" HorizontalOptions="Center" FontAttributes="Bold"/>
            </StackLayout>

            <StackLayout Grid.Row="0" Grid.Column="1">
                <ImageButton Grid.Row="0" Grid.Column="1" Source="barbel" Clicked="OnGymClicked"/>  
                <Label Grid.Row="0" Grid.Column="1" Text="Gym Location" HorizontalOptions="Center" FontAttributes="Bold"/>
            </StackLayout>
        </Grid>
    </StackLayout>
</ContentPage>